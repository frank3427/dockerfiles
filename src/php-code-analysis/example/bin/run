#! /bin/sh

# ------------------------
#
# Run a container as an example
#
# ------------------------

cd `dirname $0`/../
HERE=$(pwd)

echo ""
echo "----------------------------"
echo "Running an example"
echo "----------------------------"
echo ""

docker run -it --rm \
    qmu1/php-code-analysis:latest /bin/sh -c "\
    phpcs --version
    phpmd --version
    phpcpd --version
    php-cs-fixer --version
"
